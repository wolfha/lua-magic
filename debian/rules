#!/usr/bin/make -f

DEB_HOST_MULTIARCH ?= $(shell dpkg-architecture -qDEB_HOST_MULTIARCH)

%:
	dh $@

override_dh_auto_build:
	$(MAKE) deb

override_dh_install:
	dh_install src/liblua5.1-magic.so.0.0.0 /usr/lib/$(DEB_HOST_MULTIARCH)/
	dh_install src/liblua5.2-magic.so.0.0.0 /usr/lib/$(DEB_HOST_MULTIARCH)/
	dh_install src/liblua5.3-magic.so.0.0.0 /usr/lib/$(DEB_HOST_MULTIARCH)/

override_dh_link:
	dh_link usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.1-magic.so.0.0.0 usr/lib/$(DEB_HOST_MULTIARCH)/lua/5.1/magic.so
	dh_link usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.1-magic.so.0.0.0 usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.1-magic.so.0
	dh_link usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.2-magic.so.0.0.0 usr/lib/$(DEB_HOST_MULTIARCH)/lua/5.2/magic.so
	dh_link usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.2-magic.so.0.0.0 usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.2-magic.so.0
	dh_link usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.3-magic.so.0.0.0 usr/lib/$(DEB_HOST_MULTIARCH)/lua/5.3/magic.so
	dh_link usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.3-magic.so.0.0.0 usr/lib/$(DEB_HOST_MULTIARCH)/liblua5.3-magic.so.0

